<?xml version="1.0"?>
<!-- behaviors\SparkXFormRotate.mxml -->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    xmlns:s="library://ns.adobe.com/flex/spark">
    <s:layout>
        <s:VerticalLayout/>
    </s:layout>

    <fx:Declarations>
        <s:Rotate id="rotateEffect" 
            target="{myImage}" 
            angleBy="180"/>
    </fx:Declarations>

    <s:Button label="Rotate Me" 
        click="rotateEffect.end();rotateEffect.play();"/>
    <s:Image id="myImage" 
        source="@Embed(source='assets/logo.jpg')"/>
</s:Application>
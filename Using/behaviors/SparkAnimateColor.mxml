<?xml version="1.0"?>
<!-- behaviors\SparkAnimateColor.mxml -->
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Declarations>
        <s:AnimateColor id="changeColor"
            target="{myB1}"
            colorFrom="0xFFFFFF"
            colorTo="0x000000"
            duration="4000"/>
    </fx:Declarations>

    <s:Button id="myB1"
        label="Scale Button"
        mouseDown="changeColor.end(); changeColor.play();"/>
</s:Application>
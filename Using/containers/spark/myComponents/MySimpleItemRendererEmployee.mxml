<?xml version="1.0" encoding="utf-8"?>
<!-- containers\spark\myComponents\MySimpleItemRendererEmployee.mxml -->
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    xmlns:s="library://ns.adobe.com/flex/spark">

    <s:states>
        <s:State name="normal"/>
        <s:State name="hovered"/>
        <s:State name="selected"/>
    </s:states>
    
    <s:Rect left="0" right="0" top="0" bottom="0"> 
        <s:fill> 
            <s:SolidColor color="0xFFFFFF" /> 
        </s:fill> 
        <s:fill.hovered> 
            <s:SolidColor color="0xCEDBEF" /> 
        </s:fill.hovered> 
        <s:fill.selected> 
            <s:SolidColor color="0xA8C6EE" /> 
        </s:fill.selected> 
    </s:Rect> 

    <s:HGroup verticalCenter="0" left="2" right="2" top="2" bottom="2">
        <s:Label text="Name: " fontWeight="bold"/>    
        <s:Label text="{data.lastName}, {data.firstName}"/>    
        <s:Label text="ID#: " fontWeight="bold"/>    
        <s:Label text="{data.companyID}"/>                       
    </s:HGroup>
    <mx:HRule width="100%" bottom="2"/>
</s:ItemRenderer>
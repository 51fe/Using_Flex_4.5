<?xml version="1.0" encoding="utf-8"?>
<!-- fxg/TextGraphicExampleMXML.mxml -->
<s:Application 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:mx="library://ns.adobe.com/flex/mx" 
    xmlns:s="library://ns.adobe.com/flex/spark">

    <s:layout>
        <s:VerticalLayout/>
    </s:layout>

     <mx:Panel title="TextGraphic Example"
        height="75%" width="75%" layout="horizontal"
        paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10">

          <s:HGroup>
            <s:RichText>
               <s:content>Hello World!</s:content>
            </s:RichText>
            <s:RichText textAlign="justify" width="100">
               <s:content>This is a block of text that is justified, so you can see formatting applied.</s:content>
            </s:RichText>
            <s:RichText>
               <s:content>This text is <s:span fontWeight="bold">BOLD</s:span>,<s:br/> 
               this text is <s:span textDecoration="underline">UNDERLINED</s:span>,<s:br/>
               and this text is <s:span fontStyle="italic">ITALIC</s:span>.
               <s:p>This is a new paragraph.</s:p></s:content>
            </s:RichText>
          </s:HGroup>

     </mx:Panel>
</s:Application>